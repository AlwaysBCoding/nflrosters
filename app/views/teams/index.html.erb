<h1>Listing teams</h1>

<table>
  <tr>
    <th>City</th>
    <th>Name</th>
    <th>Conference</th>
    <th>Division</th>
	<th>Roster</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.city %></td>
    <td><%= team.name %></td>
    <td><%= team.conference %></td>
    <td><%= team.division %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

